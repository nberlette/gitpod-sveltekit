{
  "name": "gitpod-sveltekit",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview --port 5000",
    "build:pkg": "svelte-kit package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. .",
    "lint:fix": "prettier --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "1.0.0-next.208",
    "@types/cookie": "^0.4.1",
    "@types/html-minifier": "^4.0.2",
    "html-minifier": "^4.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.3",
    "svelte-check": "^2.3.0",
    "svelte-preprocess": "^4.10.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-plugin-windicss": "^1.6.3",
    "windicss": "^3.4.3"
  },
  "dependencies": {
    "@fontsource/fira-mono": "^4.2.2",
    "@lukeed/uuid": "^2.0.0",
    "cookie": "^0.4.1"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "svelteBracketNewLine": true,
    "svelteStrictMode": true,
    "svelteIndentScriptAndStyle": true,
    "svelteSortOrder": "scripts-styles-options-markup",
    "parser": "svelte",
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
